{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "react-native"
    ],
    "rules": {
        "arrow-parens": "off",
        "class-methods-use-this": "off",
        "comma-dangle": "off",
        "no-console": "off",
        "no-return-assign": 2,
        "no-extra-parens": 2,
        "brace-style": [
            2,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "semi": [
            2,
            "always",
            {
                "omitLastInOneLineBlock": true
            }
        ],
        "no-underscore-dangle": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "react/jsx-indent": "off",
        "react/prefer-stateless-function": 1,
        "space-before-function-paren": "warn"
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".android.js",
                    ".ios.js"
                ]
            }
        }
    }
}